{% extends 'SiescPartesBundle::base.html.twig' %}

{% block main_content %}
    <h2>Calculo de Premio de Asistencia</h2>
    <div style="margin-bottom: 15px">
        {{ form(form) }}
    </div>
    {% if results is not null %}
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="3">Periodo:{{ periodo }} - Seccion: {{ seccion }}</t5>
                </tr>
                <tr>
                    <th>Docente</th>
                    <th>Inasistencias</th>
                    <th>Premio</th>
                </tr>
            </thead>
            <tbody>
            {% for res in results %}
                <tr>
                    <td>{{ res.docente }}</td>
                    <td>{{ res.inasistencias }}</td>
                    <td>${{ res.premio }}.-</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}