{% extends '@SiescWeb/base_admin.html.twig' %}

{% block page_title %}
Institucion: "{{ entity.name}}"
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <a href="{{ path('siesc_tenant') }}">Instituciones</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        Detalle
    </li>
{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-graduation font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">{{ entity.name }}</span>
                </div>
                <div class="actions">
                    <a href="#" class="btn btn-default btn-circle">
                        <i class="fa fa-angle-left"></i>
                        <span class="hidden-480">Volver </span>
                    </a>
                    <div class="btn-group">
                        <a class="btn btn-default btn-circle" href="#" data-toggle="dropdown">
                            <i class="fa fa-cog"></i>
							<span class="hidden-480">Acciones </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="#">
                                    <i class="fa fa-pencil"></i> Editar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-trash"></i> Eliminar <span class="label label-danger label-sm">Peligroso </span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-barcode"></i> Imprimir / Enviar Factura </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="tabbable">
                    <ul class="nav nav-tabs nav-tabs-lg">
                        <li class="active">
                            <a href="#tab1" data-toggle="tab">Detalles</a>
                        </li>
                        <li>
                            <a href="#tab2" data-toggle="tab">Staff Administrativo</a>
                        </li>
                        <li>
                            <a href="#tab3" data-toggle="tab">Docentes</a>
                        </li>
                        <li>
                            <a href="#tab4" data-toggle="tab">Alumnos</a>
                        </li>
                        <li>
                            <a href="#tab5" data-toggle="tab">Historial</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab1">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="portlet blue-hoki box">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-cogs"></i>Informacion
                                            </div>
                                            <div class="actions">
                                                <a href="#" class="btn btn-default btn-sm">
                                                    <i class="fa fa-pencil"></i> Editar </a>
                                            </div>
                                        </div>
                                        <div class="portlet-body">
                                            <div class="row static-info">
                                                <div class="col-md-5 name">
                                                    Nombre:
                                                </div>
                                                <div class="col-md-7 value">
                                                    {{ entity.name }}
                                                </div>
                                            </div>
                                            <div class="row static-info">
                                                <div class="col-md-5 name">
                                                    URL:
                                                </div>
                                                <div class="col-md-7 value">
                                                    {% set url = "http://" ~ entity.subdomain ~ ".siesc.com.ar" %}
                                                    <a href="{{ url }}">{{ url }}</a>
                                                </div>
                                            </div>
                                            <div class="row static-info">
                                                <div class="col-md-5 name">
                                                    Email:
                                                </div>
                                                <div class="col-md-7 value">
                                                    -
                                                </div>
                                            </div>
                                            <div class="row static-info">
                                                <div class="col-md-5 name">
                                                    Contacto:
                                                </div>
                                                <div class="col-md-7 value">
                                                    -
                                                </div>
                                            </div>
                                            <div class="row static-info">
                                                <div class="col-md-5 name">
                                                    Numero de Telefono:
                                                </div>
                                                <div class="col-md-7 value">
                                                    -
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="portlet blue-hoki box">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-cogs"></i>Facturacion
                                            </div>
                                        </div>
                                        <div class="portlet-body">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}