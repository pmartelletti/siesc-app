{% from 'SiescWebBundle:Macros:form_actions.html.twig' import update %}
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-graduation font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">
                {% block form_title %}{% endblock %}
            </span>
        </div>
    </div>
    <div class="portlet-body form">
        {% block form_tag %}
        <form action={% block form_url %}"" {% endblock %} {{ form_enctype(form) }} method="POST" class="form-horizontal">
        {% endblock %}
            <div class="form-body">
                {{ form_widget(form) }}
                {{ form_rest(form) }}
            </div>
            <div class="form-actions">
                {{ update() }}
            </div>
        </form>
    </div>
</div>