{% block extends %}
{{ "{% extends 'SiescWebBundle::base.html.twig' %}" }}
{{ "{% from 'SiescWebBundle:Macros:form_actions.html.twig' import update %}" }}
{% endblock %}

{% block body %}
{{ "{% block page_title %}" }}
    Editar {{ entity_normal_name }}: "{{ "{{ entity }}" }}"
{{ "{% endblock %}" }}

{{ "{% block current_breadcrumb %}" }}
    <li>
        <span>Admin</span>
    </li>
    <li>
        <a href="{{ "{{ path('%s') }}" | format(route_prefix)}}">{{ entity_normal_name }}</a>
    </li>
    <li>
        <a href="{{ "{{ path('%s_edit', {'id': entity.id}) }}" | format(route_prefix)}}">Editar</a>
    </li>
{{ "{% endblock %}" }}

{{ "{% block page_content -%}" }}
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">Editar {{ entity_normal_name }}: "{{ "{{ entity }}" }}"</header>
                <div class="panel-body">
                    <form action="{{ "{{ path('%s_edit', {'id': entity.id}) }}" | format(route_prefix)}}" {{ "{{ form_enctype(form) }}" }} method="POST" class="form-horizontal">
                        <fieldset>
                            {{ "{{ form_widget(form) }}" }}
                        </fieldset>
                        {{ "{{ form_rest(form) }}" }}
                        {{ "{{ update() }}" }}
                    </form>
                </div>
            </section>
        </div>
    </div>
{{ "{% endblock %}" }}

{% endblock %}