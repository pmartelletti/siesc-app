{% extends 'SiescWebBundle::base.html.twig' %}
{% from 'SiescWebBundle:Macros:form_actions.html.twig' import create %}

{% block page_title %}
Crear nuevo Docente
{% endblock %}

{% block current_breadcrumb %}
<li>
    <span>Admin</span>
</li>
<li>
    <a href="{{ path('data_app_docente_index') }}">Docente</a>
</li>
<li>
    <a href="{{ path('data_app_docente_new') }}">Nuevo</a>
</li>
{% endblock %}

{% block page_content -%}
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">Crear nuevo Docente</header>
                <div class="panel-body">
                    <form action="{{ path('data_app_docente_new') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                        <fieldset>
                            {{ form_widget(form) }}
                        </fieldset>
                        {{ form_rest(form) }}
                        {{ create() }}
                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

