{% extends 'SiescWebBundle::base.html.twig' %}

{% block page_title %}
    Docentes
{% endblock %}

{% block current_breadcrumb %}
    <li>
        <a href="{{ path('data_index') }}">Data</a>
    </li>
    <li>App</li>
    <li class="active">Docente</li>
{% endblock %}

{% block page_content -%}
    <div class="row">
        <div class="col-md-12">
            <p class="text-right">
                <a class="btn btn-primary" href="{{ path('data_app_docente_new') }}">
                    <i class="icon-plus-circle"></i> Nuevo Docente
                </a>
                <a class="btn btn-primary" href="{{ path('data_app_docente_import') }}">
                    <i class="icon-file-plus"></i> Importar archivo CSV
                </a>
            </p>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h6 class="panel-title">Docentes</h6>
                </div>
                <div class="datatable">
                    <div class="datatable-header"></div>
                    <div class="datatable-scroll">
                        <table class="table table-hover table-condensed dataTable">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Cuil</th>
                                <th>Funcion Principal</th>
                                <th scope="col" class="text-right">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr class="{% if entity.isOpen is defined and not entity.isOpen %}disabled{% endif %}">
                                    <td>{{ siesc_crud_property(entity,"nombre") }}</td>
                                    <td>{{ siesc_crud_property(entity,"apellido") }}</td>
                                    <td>{{ siesc_crud_property(entity,"email") }}</td>
                                    <td>{{ siesc_crud_property(entity,"roles") }}</td>
                                    <td>{{ siesc_crud_property(entity,"cuil") }}</td>
                                    <td>{{ siesc_crud_property(entity,"funcionPrincipal") }}</td>

                                    <td class="text-right">
                                        <a class="btn btn-info btn-xs"
                                           href="{{ path('data_app_docente_show', { 'id': entity.id }) }}"><i
                                                    class="icon-zoom-in"></i> </a>
                                        <a class="btn btn-warning btn-xs"
                                           href="{{ path('data_app_docente_edit', { 'id': entity.id }) }}"><i
                                                    class="icon-pencil3"></i> </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="datatable-footer"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}

