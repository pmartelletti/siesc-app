{% extends 'SiescWebBundle::base.html.twig' %}

{% block page_title %}
    Showing Docente: "{{ entity }}"
{% endblock %}

{% block current_breadcrumb %}
    <li>
        <span>Admin</span>
    </li>
    <li>
        <a href="{{ path('data_app_docente_index') }}">Docente</a>
    </li>
    <li>
        <a href="{{ path('data_app_docente_show', {'id': entity.id}) }}">Detalle</a>
    </li>
{% endblock %}

{% block page_content -%}
    <div class="row">
        <div class="col-md-9">
            {% include 'SiescWebBundle:Data/App/Docente:_details.html.twig' %}
        </div>
        <div class="col-md-3">
            <section class="panel">
                <header class="panel-heading">
                    Acciones
                </header>
                <div class="panel-body">
                    <a href="{{ path('data_app_docente_send_credentials', {'id': entity.id }) }}" class="btn btn-success btn-block">
                        <i class="icon-lock3"></i> Enviar mail de acceso
                    </a>
                    <a href="{{ path('data_app_docente_edit', {'id': entity.id}) }}" class="btn btn-primary btn-block">
                        <i class="icon-pencil"></i> Editar Docente
                    </a>
                    <a href="{{ path('data_app_docente_manage_role', {'docente': entity.id }) }}" class="btn btn-warning btn-block">
                        <i class="icon-pencil"></i> Editar Roles
                    </a>
                    <a href="{{ path('data_app_docente_index') }}" class="btn btn-info btn-block">
                        <i class="icon-list"></i> Volver a la lista
                    </a>
                </div>
            </section>
        </div>
    </div>
{% endblock page_content -%}

